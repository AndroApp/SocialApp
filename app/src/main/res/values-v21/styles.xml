<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- customize the color palette -->
        <item name="android:colorPrimary">@color/myPrimary</item>
        <item name="android:colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="android:colorAccent">@color/myAccent</item>

        <item name="android:actionOverflowMenuStyle">@style/myMunuStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/myOverflowButton</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>


    </style>
    <style name="myMunuStyle" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@color/myPrimary</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="myOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_add_white_24dp</item>
    </style>

    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
    </style>




    <style name="NoActionBar" parent="android:Theme.Holo.Light.NoActionBar"/>

    <style name="TextStyle">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/TextColorDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- PagerSlidingTabStrip的自定义样式 -->
    <style name="pagerTabStype">
        <item name="pstsShouldExpand">true</item>
        <item name="pstsDividerColor">@color/myDivider</item>
        <item name="pstsDividerPadding">0dp</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="pstsUnderlineColor">@color/myPrimary</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsIndicatorColor">@color/myPrimaryLight</item>

    </style>
</resources>
